<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:id="@+id/details_scrollview" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/details_layout"
    >

    <TextView
        android:id="@+id/details_movie_title"
        android:text="@string/textview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:paddingLeft="@dimen/label_padding_left"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/black"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/details_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_weight="1.66"
        android:layout_below="@+id/details_movie_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/details_plot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/label_text_size"
        android:paddingTop="20dp"
        android:paddingLeft="@dimen/label_padding_left"
        android:paddingRight="10dp"
        android:paddingBottom="30dp"
        android:layout_below="@+id/details_imageview" />

    <TextView
        android:id="@+id/details_release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/label_text_size"
        android:paddingLeft="@dimen/label_padding_left"
        android:paddingTop="5dp"
        android:layout_below="@+id/details_release_date_label"
        android:layout_toRightOf="@+id/details_imageview" />

    <TextView
        android:id="@+id/details_user_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/label_text_size"
        android:paddingLeft="@dimen/label_padding_left"
        android:paddingTop="5dp"
        android:layout_below="@+id/details_user_rating_label"
        android:layout_toRightOf="@+id/details_imageview" />

    <TextView
        android:id="@+id/details_release_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/release_date_label"
        android:textSize="@dimen/label_text_size"
        android:paddingTop="10dp"
        android:paddingLeft="@dimen/label_padding_left"
        android:layout_alignTop="@+id/details_imageview"
        android:layout_toRightOf="@+id/details_imageview"
        android:layout_toEndOf="@+id/details_imageview" />

    <TextView
        android:id="@+id/details_user_rating_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_rating_label"
        android:textSize="@dimen/label_text_size"
        android:paddingLeft="@dimen/label_padding_left"
        android:paddingTop="10dp"
        android:layout_below="@+id/details_release_date"
        android:layout_toRightOf="@+id/details_imageview" />

    <ImageView
        android:id="@+id/testImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/details_user_rating_label"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
</ScrollView>